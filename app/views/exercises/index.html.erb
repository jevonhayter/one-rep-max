<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Exercise</th>
      <th>Weight</th>
      <th>Reps</th>
      <th>Max</th>
      <th>Bulk</th>
      <th>Tone</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <% if exercise.user == current_user %>
        <td><%=exercise.user.email%></td>
        <td><%= exercise.date %></td>
        <td><%= exercise.exercise %></td>
        <td><%= exercise.weight %></td>
        <td><%= exercise.reps %></td>
        <td><%= exercise.max %></td>
        <td><%= exercise.bulk %></td>
        <td><%= exercise.tone %></td>
        <td><%= exercise.user_id %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

