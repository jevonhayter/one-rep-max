<div class="row">
  <div class="col-md-10 col-md-offset-1"> 
 
<p id="notice"><%= notice %></p>

<h1 class="text-center">Exercise History</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
       
      <th>Date</th>
      <th>Exercise</th>
      <th>Weight</th>
      <th>Reps</th>
      <th>Max</th>
      <th>Bulk</th>
      <th>Tone</th>
       
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <% if exercise.user == current_user %>
        <td><%= exercise.date.strftime("%b %d %Y")%></td>
        <td><%= exercise.exercise %></td>
        <td><%= exercise.weight %></td>
        <td><%= exercise.reps %></td>
        <td><%= exercise.max %></td>
        <td><%= exercise.bulk %></td>
        <td><%= exercise.tone %></td>
        <td><%= link_to 'Delete', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise', new_exercise_path %>
</div>
</div>