<div class="row">
  <div class="col-md-4 col-md-offset-4">

<%= form_for(@exercise) do |f| %>
   
  
  <div class="well bye"> 
  <div class="form-group">
    <%= f.label :date %><br>
    <%= f.date_select :date, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :exercise %><br>
    <%= f.text_field :exercise, class:'form-control', placeholder: 'Enter Exercise' %>
  </div>
  <div class="form-group">
    <%= f.label :weight %><br>
    <%= f.number_field :weight, class:'form-control', id:"weight", placeholder: 'Enter Weight' %>
  </div>
  <div class="form-group">
    <%= f.label :reps %><br>
    <%= f.number_field :reps, class:'form-control', id:"reps", placeholder: 'Enter # of Reps' %>
  </div>
   
   <div class="actions" id="submit">
    <%= f.submit value:'Calculate', class: 'btn btn-primary btn-block' %>
  </div>
  </div>
  
   
  
  <div class="row">
					<div class="col-md-6 col-md-offset-3">
					<div class="alert alert-danger" role="alert">"Please enter reps between 1 to 10"</div>
					<button type="text" class="btn btn-default btn-primary btn-danger" id="try">Try Again!</button>
					</div>
					</div>
	</div> <!--End of Left Col-->
	
	
	<div class="col-md-4 col-md-offset-4">
	<div class="well space"> 				
  <div class="form-group has-success">
    <%= f.label "Your One Rep Max" %><br>
    <%= f.number_field :max, class:'form-control', id:"onerepmax" %>
  </div>
  <div class="field">
    <%= f.label "Your work out weight for bulking up" %><br>
    <%= f.number_field :bulk, class:'form-control', id:"bwow" %> 
  </div>
  <div class="field">
    <%= f.label "Your work out weight for toning up" %><br>
    <%= f.number_field :tone, class:'form-control', id:"wow" %>  
  </div>
  
 
   <div class="actions">
    <%= f.submit value:'Save', class: 'btn btn-primary btn-block submit'%>
  </div>
  </div>
  </div>
<% end %>

 
</div>